protocol XML ():

    @staticmethod
    parse   : (str) -> Self
    
    @staticmethod
    print   : (Self) -> str


extension int (XML):
    
    def parse(s):
        return int(s)
        
    def print(i):
        return str(i)


extension str (XML):
    
    def parse(s):
        return s            # TODO: handle escapes:  "'<>&  <=  &quot; &apos; &lt; &gt; &amp;
    
    def print(s):
        return s            # TODO: handle escapes:  "'<>&  =>  &quot; &apos; &lt; &gt; &amp;

extension bool (XML):
    
    def parse(s):
        return bool(s)
    
    def print(b):
        return str(b)


def parse_empty(text):
    if text == '':
        return ()
    else:
        raise ParseError


class ParseError (Exception):
    pass
