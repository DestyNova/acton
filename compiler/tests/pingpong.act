actor Pingpong(i):
    var count = 0
#    _ping : action() -> None
#    _pong : action(int) -> None
    def _ping():
        count = count + i
        print('%d Ping %8d' % (i,count))
#        print('{i} Ping {count}')
        after 1: _pong(-count)
    def _pong(q):
        print('%d      %8d Pong' % (i,q))
#        print('{i}      {q} Pong')
        after 2: _ping()
        #relay(2, _ping)
    _ping()

