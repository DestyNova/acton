
actor Pingpong(env):
    var count = 0
    (_arg : str) = env.args[1]
    i = int(_arg)
    def _ping():
        count = count + i
        print('%d Ping %8d' % (i,count))
        after 1: _pong(-count)
    def _pong(q):
        print('%d      %8d Pong' % (i,q))
        after 2: _ping()
    _ping()

